.Main-chat__message__contents
  .Main-chat__message__contents__list
    .Main-chat__message__contents__list__name
      = message.user.name
    .Main-chat__message__contents__list__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .Main-chat__message__contents__text
    - if message.content.present?
      %p.Main-chat__message__contents__text
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?